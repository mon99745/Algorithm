class Solution {
    public int[] solution(long n) {
        
        int count = 0;
        String str = String.valueOf(n);
        int[] answer = new int [str.length()];
        
        for(int i=str.length()-1; i>=0; i--){
            answer[count] = Integer.parseInt(String.valueOf(str.charAt(i)));
            count++;
        }
        return answer;
    }
}
